# Database
# For local development (SQLite)
DATABASE_URL="file:./dev.db"
# For production (PostgreSQL on AWS/Vercel/Neon)
# DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"

# JWT Configuration - CHANGE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars
JWT_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development

# CORS (comma-separated origins)
# For local development
CORS_ORIGINS=http://localhost:4200,http://localhost:4201
# For production (update with your deployed frontend URLs)
# CORS_ORIGINS=https://your-app.vercel.app,https://your-app.netlify.app
